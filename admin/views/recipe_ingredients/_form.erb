<% error = @recipe_ingredient.errors.include?(:recipe_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :recipe_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :recipe_id, :class => 'input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:recipe_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @recipe_ingredient.errors.include?(:ingredient_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :ingredient_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :ingredient_id, :class => 'input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:ingredient_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:recipe_ingredients, :index), :class => 'btn' %>
</div>
